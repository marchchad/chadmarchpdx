extends layout

block content
  .container
    .page-header Admin
    hr
    p Coming soon: manage the profile and keg information.
    h3 Add a Keg
    form.row(action='/api/system' method='POST')
      label.row(for='kegsize') Keg Size
      input(id='kegsize' name='kegsize' type='range' min='1' max='15.5' step='0.5')
      label.row(for='kegcount') Count
        sup *To add multiple kegs of the same size at the same time
      input(id='kegcount' name='kegcount' type='range' min='1' max='99')
      div.row
        button(type='submit') Submit
    h3 Configure a FlowMeter
    form.row(action='/api/keg/' method='POST')
      label.row Keg ID
      label 1
        input(name='kegid' type='radio' value='1')
      label 2
        input(name='kegid' type='radio' value='2')

      label.row(for='volume') Volume (gallons)
      input(id='volume' name='volume' type='range' min='0' max='99')

      label.row(for='pressure') Pressure (psi)
      input(id='pressure' name='pressure' type='range' min='0' max ='40')

      label.row(for='keggedon') Date Kegged
      input(id='keggedon' name='keggedon' type='date')

      label.row(for='recipeid') Recipe
      select(id='recipeid' name='recipeid')
        for recipe in data.recipes
          option(value=recipe.id) #{recipe.name}

      div.row
        button(type='submit') Submit
      if data.message
        h3=data.message

block append scripts
  script(data-main='js/admin/main', src='js/lib/require.js')